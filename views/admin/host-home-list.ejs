<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Home List - Rent House Admin</title>
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    /* Animated Gradient Background */
    body {
      margin: 0;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      background: linear-gradient(-45deg, #6a11cb, #2575fc, #ff6a00, #ff3c78);
      background-size: 400% 400%;
      animation: gradientBG 15s ease infinite;
      overflow-x: hidden;
      position: relative;
    }

    @keyframes gradientBG {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    /* Floating shapes */
    .circle {
      position: absolute;
      border-radius: 50%;
      opacity: 0.2;
      animation: float 10s infinite ease-in-out;
    }
    .circle1 { width: 120px; height: 120px; top: 10%; left: 15%; background: #fff; animation-delay: 0s; }
    .circle2 { width: 200px; height: 200px; bottom: 20%; right: 10%; background: #fff; animation-delay: 3s; }
    .circle3 { width: 80px; height: 80px; bottom: 10%; left: 5%; background: #fff; animation-delay: 6s; }

    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-30px); }
    }

    /* Navbar */
    .navbar {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
    }

    /* Table Card */
    .table-card {
      background: rgba(255, 255, 255, 0.9);
      border-radius: 20px;
      padding: 20px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    }

    /* Buttons */
    .btn-edit {
      background: linear-gradient(135deg, #2575fc, #6a11cb);
      border: none;
      color: #fff;
      padding: 5px 15px;
      border-radius: 25px;
      transition: 0.3s;
    }
    .btn-edit:hover {
      background: linear-gradient(135deg, #6a11cb, #2575fc);
      transform: scale(1.05);
    }
    .btn-delete {
      background: linear-gradient(135deg, #ff3c78, #ff6a00);
      border: none;
      color: #fff;
      padding: 5px 15px;
      border-radius: 25px;
      transition: 0.3s;
    }
    .btn-delete:hover {
      background: linear-gradient(135deg, #ff6a00, #ff3c78);
      transform: scale(1.05);
    }
  </style>
</head>
<body>

  <!-- Floating Background Shapes -->
  <div class="circle circle1"></div>
  <div class="circle circle2"></div>
  <div class="circle circle3"></div>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/AdminPage">üè° Admin</a>
      <button onclick="goToUser()" class="btn btn-light btn-sm rounded-pill px-3">Logout</button>
    </div>
  </nav>

  <!-- Content -->
  <div class="container my-5">
    <div class="table-card">
      <h2 class="mb-4 text-center fw-bold">üè† Home List</h2>
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th>#</th>
              <th>Home Name</th>
              <th>Location</th>
              <th>Price</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% allEntries.forEach((home)=>{ %>
            <tr>
              <td>1</td>
              <td><%=home.propertyname%></td>
              <td><%=home.location%></td>
              <td><%=home.price%>/night</td>
              <td><span class="badge bg-success">Status</span></td>
              <td>
              
                <a href="/host/editHome/<%= home._id%>?editing=true" class="btn-edit btn-sm me-2"><i class="bi bi-pencil-square"></i> Edit</a>

                <form action="/host/delHome" method="POST">
                  <input type="hidden" name="_id" value="<%= home._id%>">
                <input type="submit" class="btn-delete btn-sm bi bi-trash">
                </form>
              </td>
            </tr>
   
            <% });%>

           
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    function goToUser() {
      window.location.href = '/';
    }
  </script>
</body>
</html>
