<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Admin Dashboard</title>
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    /* Animated Gradient Background */
    body {
      margin: 0;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      background: linear-gradient(-45deg, #6a11cb, #2575fc, #ff6a00, #ff3c78);
      background-size: 400% 400%;
      animation: gradientBG 15s ease infinite;
      overflow-x: hidden;
      position: relative;
    }

    @keyframes gradientBG {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    /* Floating shapes */
    .circle {
      position: absolute;
      border-radius: 50%;
      opacity: 0.2;
      animation: float 10s infinite ease-in-out;
    }
    .circle1 { width: 120px; height: 120px; top: 10%; left: 15%; background: #fff; animation-delay: 0s; }
    .circle2 { width: 200px; height: 200px; bottom: 20%; right: 10%; background: #fff; animation-delay: 3s; }
    .circle3 { width: 80px; height: 80px; bottom: 10%; left: 5%; background: #fff; animation-delay: 6s; }

    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-30px); }
    }

    /* Navbar */
    .navbar {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
    }

    /* Cards */
    .dashboard-container {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 1;
    }
    .card {
      border: none;
      border-radius: 20px;
      padding: 30px 20px;
      transition: all 0.4s ease;
      background: #fff;
      box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    }
    .card:hover {
      transform: translateY(-10px);
      box-shadow: 0 15px 30px rgba(0,0,0,0.25);
    }
    .icon-box {
      font-size: 40px;
      background: linear-gradient(135deg, #2575fc, #6a11cb);
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 15px;
    }
    .btn-custom {
      background: linear-gradient(135deg, #2575fc, #6a11cb);
      border: none;
      color: white;
      padding: 8px 20px;
      border-radius: 30px;
      transition: all 0.3s;
    }
    .btn-custom:hover {
      background: linear-gradient(135deg, #6a11cb, #2575fc);
      transform: scale(1.05);
    }
  </style>
</head>
<body>

  <!-- Floating Background Shapes -->
  <div class="circle circle1"></div>
  <div class="circle circle2"></div>
  <div class="circle circle3"></div>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand fw-bold" href="#">üè° Admin</a>
      <button onclick="goToUser()" class="btn btn-light btn-sm rounded-pill px-3">Logout</button>
    </div>
  </nav>

  <!-- Dashboard Content -->
  <div class="dashboard-container">
    <div class="container text-center">
      <h1 class="text-white fw-bold mb-5">Welcome, Admin</h1>
      <div class="row g-4 justify-content-center">

        <!-- Add Home -->
        <div class="col-md-4">
          <div class="card h-100">
            <div class="card-body">
              <div class="icon-box"><i class="bi bi-house-add"></i></div>
              <h5 class="card-title">Add Home</h5>
              <p class="card-text text-muted">Add a new property to the listings with ease.</p>
              <a href="/host/property-details" class="btn btn-custom">Go</a>
            </div>
          </div>
        </div>

        <!-- Home List -->
        <div class="col-md-4">
          <div class="card h-100">
            <div class="card-body">
              <div class="icon-box"><i class="bi bi-list-ul"></i></div>
              <h5 class="card-title">Home List</h5>
              <p class="card-text text-muted">View, update, or remove existing homes.</p>
              <a href="/host/home-list" class="btn btn-custom">Go</a>
            </div>
          </div>
        </div>

        <!-- Bookings -->
        <div class="col-md-4">
          <div class="card h-100">
            <div class="card-body">
              <div class="icon-box"><i class="bi bi-calendar-check"></i></div>
              <h5 class="card-title">Bookings</h5>
              <p class="card-text text-muted">Check and manage booking requests.</p>
              <a href="bookings.html" class="btn btn-custom">Go</a>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

   <script>
    function goToUser() {
      window.location.href = '/';
    }
  </script>
</body>
</html>
