 <%- include('../partials/uptoHead')%>

 <div class="container mt-4">
  <div class="row g-4">
    <h3>My Favourites</h3>
    <% favourites.forEach((home) => { %>
      <div class="col-md-4">
        <div class="card shadow-sm h-100">
          <img src="<%= home.imgURL %>" class="card-img-top" alt="Property Image">
          <div class="card-body">
            <h5 class="card-title"><%= home.propertyname %></h5>
            <p class="card-text">   
              <strong>üë§ Owner:</strong> <%= home.username %><br>
              <strong>üìç Location:</strong> <%= home.location || 'Goa, India' %><br>
              <strong>üí∞ Price/Night:</strong> ‚Çπ<%= home.price || '4,500' %><br>
              <strong>‚≠ê Rating:</strong> <%= home.ratingLabel || 'Excellent' %> <%= home.ratingEmoji || 'üòÑ' %>
            </p>
           <div class="d-flex justify-content-between gap-2">
  <!-- View Details -->
  <a href="/home-detail/<%= home._id %>"
     class="btn btn-outline-primary btn-lg  fw-semibold">
    <i class="bi bi-info-circle me-2"></i> View Details
  </a>


  <!-- Book Now -->
  <a href="#" 
     class="btn btn-success btn-lg rounded-pill fw-semibold shadow-sm">
    <i class="bi bi-calendar-check me-2"></i> Book Now
  </a>

  <!-- Delete -->
   <form action="/delFav" method="POST">
      <input type="hidden" name="houseID" value="<%= home._id %>">
      <button class="btn btn-success btn-lg rounded-pill fw-semibold shadow-sm" type="submit">
   </form>
  
</div>


          </div>
        </div>
      </div>
      
    <% }) %>
  </div>
</div>


 <%- include('../partials/endOfBody')%>